@model IEnumerable<ProductModel>
@{
    ViewData["title"] = "Product Listed";
}
<h3>List Product</h3>
<a class="btn btn-warning btn-sm" asp-action="Create" asp-controller="Product">Thêm sản phẩm</a>
<table class="table" id="myTable">
    <thead>
        <tr>
            <th scope="col">STT</th>
            <th scope="col">Product Name</th>
            <th scope="col">Product Add Quantity</th>
            <th scope="col">Product Quantity</th>
            <th scope="col">Product Sold</th>
            <th scope="col">Product Description</th>
            <th scope="col">Product Price</th>
            <th scope="col">Product Capital Price</th>
            <th scope="col">Product Image</th>
            <th scope="col">Product Slug</th>
            <th scope="col">Product Category</th>
            <th scope="col">Product Brand</th>
            <th scope="col">Actions</th> 
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td scope="row">@item.Id</td>
                <td>@item.Name</td>
                <td><a asp-action="AddQuantity" asp-controller="Product" asp-route-id="@item.Id">Add quantity</a></td>
                <td>@item.Quantity</td>
                <td>@item.Sold</td>
                <td>@item.Description</td>
                <td>@item.Price.ToString("#,##0 VND")</td>
                <td>@item.CapitalPrice.ToString("#,##0 VND")</td>
                <td><img src="~/media/products/@item.Image" width="70"/></td>
                <td>@item.Slug</td>
                <td>@item.CategoryId</td>
                <td>@item.BrandId</td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="Product" asp-route-id="@item.Id">Sửa</a>
                    <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="Product" asp-route-id="@item.Id">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

