@model IEnumerable<BrandModel>
@{
    ViewData["title"] = "Brand Listed";
}
<h3>List Brand</h3>
<a class="btn btn-warning btn-sm" asp-action="Create" asp-controller="Brand">Add Brand</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">STT</th>
            <th scope="col">Brand Name</th>
            <th scope="col">Brand Description</th>
            <th scope="col">Brand Slug</th>
            <th scope="col">Brand Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>
                    @if (@item.Status == 1)
                    {
                        <span class="text text-success">Show</span>
                    }
                    else
                    {
                        <span class="text text-danger">Hide</span>
                    }
                </td>
                <td>@item.Status</td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="Brand" asp-route-id="@item.Id">Sửa</a>
                    <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="Brand" asp-route-id="@item.Id">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>