@model AppUserModel
@{
    ViewData["title"] = "Edit User Page";
}
<h4>Edit User</h4>
<div class="col-md-9">
    <form asp-action="Edit" asp-controller="User" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id"/>
        <div class="form-group">
            <label>Username</label>
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger" />
        </div>

        <div class="form-group">
            <label>Email</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger" />
        </div>

        <div class="form-group">
            <label>Phone Number</label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger" />
        </div>

        <div class="form-group">
            <label>Password</label>
            <input asp-for="PasswordHash" readonly class="form-control" />
            <span asp-validation-for="PasswordHash" class="text-danger" />
        </div>

        <div class="form-group">
            <label>Roles</label>
            <select asp-for="RoleId" class="form-control" asp-items="ViewBag.Roles">

            </select>
            <span asp-validation-for="RoleId" class="text-danger" />
        </div>


        <div class="form-group">
            <button class="btn btn-primary">Update</button>
        </div>
    </form>
    <a asp-action="Index" asp-controller="User">Back to list User</a>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
