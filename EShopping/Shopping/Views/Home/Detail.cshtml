			<div class="tab-pane fade active in" id="reviews">
				<div class="col-sm-12">
					<ul>
						<li><a href=""><i class="fa fa-user"></i>EUGEN</a></li>
						<li><a href=""><i class="fa fa-clock-o"></i>@DateTime.Now.ToString("hh:mm")</a></li>
						<li><a href=""><i class="fa fa-calendar-o"></i>@DateTime.Now.ToString("dd/MM/yyyy")</a></li>
					</ul>
					<p><b>Write Your Review</b></p>

					<form autocomplete="off" asp-action="ReviewProduct" asp-controller="Product" method="post">
						<span>
							<input asp-for="@Model.Product.Id" name="ProductId" type="hidden"/>
							<input name="star" type="hidden" value="5 sao"/>
							<div>
								<input asp-for="@Model.Name" type="text" placeholder="Your Name" />
								<span asp-validation-for="@Model.Name" class="text-danger"></span>
							</div>
							<div>
								<input asp-for="@Model.Email" type="email" placeholder="Email Address" />
								<span asp-validation-for="@Model.Email" class="text-danger"></span>
							</div>
							
						</span>
						<textarea asp-for="@Model.Comment"></textarea>
						<span asp-validation-for="@Model.Comment" class="text-danger"></span>
						<div class="form-group">
							<button type="submit" class="btn btn-default pull-right">
								Submit
							</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div><!--/category-tab-->

	<div class="recommended_items">
		<!--recommended_items-->
		<h2 class="title text-center">recommended items</h2>

		<div id="recommended-item-carousel" class="carousel slide" data-ride="carousel">
			<div class="carousel-inner">
				<div class="item active">
					@foreach(var item in ViewBag.Products as IEnumerable<ProductModel>)
					{
						<div class="col-sm-4">
							<div class="product-image-wrapper" style="height: 450px">
								<a>
									<div class="single-products">
										<div class="productinfo text-center">
											<a asp-action="Detail" asp-controller="Home" asp-route-id="@item.Id">
												<img src="~/media/products/@item.Image" alt="@item.Name" style="height: 120px" />
												<h2>@item.Price.ToString("#, ##0, VND")</h2>
												<p>@item.Name</p>
												<p>Danh mục: @item.Category.Name</p>
												<p>Thương hiệu: @item.Brand.Name</p>
											</a>
											<button class="btn btn-default add-to-cart add-product" data-product_id="@item.Id"><i class="fa fa-shopping-cart"></i>Add to cart</button>
										</div>
									</div>
								</a>
								<div class="choose">
									<ul class="nav nav-pills nav-justified">
										<li><a href="#"><i class="fa fa-plus-square"></i>Add to wishlist</a></li>
										<li><a href="#"><i class="fa fa-plus-square"></i>Add to compare</a></li>
									</ul>
								</div>
							</div>
						</div>
					}
				</div>
				
			</div>
			
		</div>
	</div><!--/recommended_items-->

</div>
@section Scripts {
	<script>
		$(document).ready(function (){
			$('.add-product').click(function(){
				var id = $(this).data("product_id");
				$.ajax({
					type: "GET",
					url:"@Url.Action("Add", "Cart")",
					data: {id : id},

					success: function(result){
						if(result.success){
							swal.fire("Add product success")
						}else{
							swal.fire("Add product fail")
						}
					}
				})
			})
		})
	</script>
}