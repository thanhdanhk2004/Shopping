@model UserModel
@{
    ViewData["Title"] = "Register Account";
}
<section>
	<div class="container">
		<div class="row">
			<div class="col-sm-12 col-sm-offset-1">
				<div class="signup-form">
					<h2>Register to your account</h2>
					<div asp-validation-summary="ModelOnly" class="text-danger" />
					<form asp-action="Create" asp-controller="Account">
						<div>
							<label>Username</label>
							<input asp-for="Username" class="form-group" />
							<span asp-validation-for="Username" class="text-danger" />
						</div>
						<div>
							<label>Email</label>
							<input asp-for="Email" class="form-group" />
							<span asp-validation-for="Email" class="text-danger" />
						</div>
						<div>
							<label>Password</label>
							<input asp-for="Password" class="form-group" />
							<span asp-validation-for="Password" class="text-danger" />
						</div>
						<button type="submit" class="btn btn-default">Register</button>
					</form>
				</div><!--/login form-->
			</div>

		</div>
	</div>
</section><!--/form-->
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}